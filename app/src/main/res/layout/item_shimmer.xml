<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/image_view_icon_worker"
        android:background="@drawable/custom_image_view"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:id="@+id/text_view_name_worker"
        android:layout_width="144dp"
        android:layout_height="16dp"
        android:background="@drawable/custom_simmer_text_view"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_view_icon_worker"/>

    <View
        android:id="@+id/text_view_department_worker"
        android:layout_width="80dp"
        android:layout_height="12dp"
        android:background="@drawable/custom_simmer_text_view"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="@id/text_view_name_worker"
        app:layout_constraintTop_toBottomOf="@id/text_view_name_worker"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_view_icon_worker"/>

</androidx.constraintlayout.widget.ConstraintLayout>