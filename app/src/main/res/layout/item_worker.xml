<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/shimmer">

    <ImageView
        android:id="@+id/image_view_icon_worker"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/text_view_name_worker"
        android:textSize="16sp"
        android:textColor="@color/black_text"
        android:textStyle="normal"
        android:lines="1"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_view_icon_worker"/>

    <TextView
        android:id="@+id/text_view_teg_worker"
        android:textSize="14sp"
        android:textColor="@color/grey_teg_worker"
        android:textStyle="normal"
        android:lines="1"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/text_view_name_worker"
        app:layout_constraintBottom_toBottomOf="@id/text_view_name_worker"/>

    <TextView
        android:id="@+id/text_view_department_worker"
        android:textSize="13sp"
        android:textColor="@color/grey_department_worker"
        android:textStyle="normal"
        android:lines="1"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/text_view_name_worker"
        app:layout_constraintTop_toBottomOf="@id/text_view_name_worker"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="image_view_icon_worker, text_view_department_worker"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barrier"/>

</androidx.constraintlayout.widget.ConstraintLayout>